!!! Strict
%html
  %head
    %title 
      TJ's Gym Food Cooperative
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
  %body
    %div#container
      %div#banner
        %img{:src=>"/images/tjs-gym-logo.jpg"}/        
      %div#header
        %h3 Welcome to TJ's Gym Food Cooperative

      %div#outer
        %div#inner
          %div#left
            %h2 Categories
            = render :partial => "categories/category_list"

            %h2 My Account
            %ul
              = render :partial => "users/user_bar"

            %h2 My Cart

          %div#content
            %p/
            - flash.each do |key, msg| 
              = content_tag :div, msg, :class => ["flash_", key], :id => "notice_#{key}"

            = yield

      %div#footer
        Powered by 
        %a{:href=>"http://github.com/briandoll/cooper/tree/master"}cooper,
        an emphatic solution by
        %a{:href=>"http://emphaticsolutions.com/"}
          Brian Doll
